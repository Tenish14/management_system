<% @title=@supplier.id%>
<%= @supplier.username %>
<div class="container">
    <table class="table table-hover">
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Quantity</th>
            <th>Price</th>
            <th>Category Name</th>

        </tr>

        <% @supplier.items.each do |item| %>                    
            <tr>
                <td><%= item.name %></td>
                <td><%= item.description %></td>
                <td><%= item.quantity_stock %></td>
                <td><%= item.price %></td>
                <td><%= item.category.name %></td>
            </tr>
        <% end %>                    
    </table>