<% @title="Add Location" %>

<div class="container">
    <div class="row">
        <div class="col-6 mx-auto my-auto">
        <h1 class="center mt-4">Add Location</h1>
            <%= form_with(model: @location, local: true, data: { turbo: false }) do |f| %>
                <%= render 'shared/error_messages' , object: f.object%>

                <%= f.label :Company, class: 'required' %>
                <%= f.text_field :company_id, value:current_user.company.name, class: 'form-control', :readonly => true %>
                <%= f.hidden_field :company_id, value: current_user.company.id %>

                <%= f.label :location_code, class: 'required'%>
                <%= f.text_field :location_code, class: 'form-control', required: true %>

                <%= f.label :name, class: 'required' %>
                <%= f.text_field :name, class: 'form-control', required: true %>

                <%= f.label :address_1, class: 'required' %>
                <%= f.text_field :address_1, class: 'form-control', required: true %>

                <%= f.label :address_2 %>
                <%= f.text_field :address_2, class: 'form-control' %>

                <%= f.label :postcode, class: 'required' %>
                <%= f.number_field :postcode, class: 'form-control', step: :any, required: true %>

                <%= f.label :state, class: 'required' %>
                <%= f.text_field :state, class: 'form-control', required: true %>

                <%= f.label :country, class: 'required' %>
                <%= f.text_field :country, class: 'form-control', required: true %>
                
                <div class="d-grid gap-2 my-2">
                    <%= f.submit "Create Location", class: "btn btn-primary" %>
                    <%= link_to 'Back', locations_path, class: 'btn btn-success'%>
                </div>
            <% end %>
        </div>
    </div>
</div>