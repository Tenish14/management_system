<% @title="Add Location" %>
<h1 class="center">Add Location</h1>

<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <%= form_with(model: @location, local: true, data: { turbo: false }) do |f| %>
            <%= render 'shared/error_messages' , object: f.object%>

            <%= f.label :name %>
            <%= f.text_field :name, class: 'form-control' %>

            <%= f.label :address_1 %>
            <%= f.text_field :address_1, class: 'form-control' %>

            <%= f.label :address_2 %>
            <%= f.text_field :address_2, class: 'form-control' %>

            <%= f.label :postcode %>
            <%= f.number_field :postcode, class: 'form-control', step: :any %>

            <%= f.label :state %>
            <%= f.text_field :state, class: 'form-control' %>

            <%= f.label :country %>
            <%= f.text_field :country, class: 'form-control' %>

            <%= f.label :location_code%>
            <%= f.text_field :location_code, class: 'form-control' %>

            <%= f.label :Company%>
            <%= f.select :company_id,Company.all.pluck(:name,:id),{prompt:'select'},{class: "form-control"}%>


            <%= f.submit "Create Item", class: "btn btn-primary" %>
        <% end %>
    </div>
</div>