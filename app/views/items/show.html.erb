<% @title=@item.id%>
<h1><%= @item.name %></h1>
<div class="container">
    <h3>Location</h3>
    <table class="table table-hover">
        <tr>
            <th>Location Id</th>
            <th>Location Code</th>
            <th>Name</th>
            <th>Address 1</th>
            <th>Address 2</th>
            <th>Postcode</th>
            <th>State</th>
            <th>Country</th>
            <th>Locations</th>
            <th>Outlet Price</th>
            <th>Cost</th>
            <th>Profit</th>
        </tr>

        <% @item.locations.each do |location| %> 
            <% location_item = LocationItem.where(location_id: location.id, item_id: @item.id).first %>                   
            <tr>
                <td><%= location.id %></td>
                <td><%= location.location_code %></td>
                <td><%= location.name %></td>
                <td><%= location.address_1 %></td>
                <td><%= location.address_2 %></td>
                <td><%= location.postcode %></td>
                <td><%= location.state %></td>
                <td><%= location.country %></td>
                <td><%= location.company.name %></td>
                <td><%= location_item.price %></td>
                <td><%= location_item.cost %></td>
                <td><%= location_item.profit %></td>
            </tr>
        <% end %>  
    </table>
</div>