<% @title="Item" %>
<h1 class="center">Items</h1>

<div class="container">
    <table class="table table-hover">
        <tr>
            <th>Id</th>
            <th>Item Name</th>
            <th>Description</th>
            <th>Quantity Stock</th>
            <th>Price</th>
            <th>Category Name</th>
            <th>Company Name</th>
        </tr>

        <% @items.each do |item| %>                    
            <tr>
                <td><%= item.id%></td>
                <td><%= item.name%></td>
                <td><%= item.description %></td>
                <td><%= item.quantity_stock%></td>
                <td><%= item.price%></td>
                <td><%= item.category.name%></td>
                <td><%= item.company.name%></td>
            </tr>
        <% end %>                    
    </table>

    <% if logged_in? && current_user.role_id? %>
        <%= link_to 'Add Item', new_items_path, class: 'btn btn-success' %>
    <% end %>
</div>