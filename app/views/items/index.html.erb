<% @title="Item" %>

<div class="container">
    <%if @items.count == 0 %>
        <h1 class="center mt-5">No Item Avaliable</h1>
    <% else %>
        <h2 class="center mt-5">Items</h2>
        <div class="table-responsive"> 
            <table class="table table-hover">
                <tr>
                    <th>Id</th>
                    <th>Item Code</th>
                    <th>Item Name</th>
                    <th>Description</th>
                    <th>Quantity Stock</th>
                    <th>Price</th>
                    <th>Cost</th>
                    <th>Profit</th>
                    <th>Category Name</th>
                    <th>Edit</th>
                    <th>Delete</th>
                </tr>

                    <% @items.each do |item| %>  
                        <% if current_user.company_id == item.company_id %>                                           
                            <tr>
                                <td><%= item.id%></td>
                                <td><%= item.item_code%></td>
                                <td><%= link_to item.name, item_path(item)%></td>
                                <td><%= item.description %></td>
                                <td><%= item.quantity_stock%></td>
                                <td><%= item.price%></td>
                                <td><%= item.cost%></td>
                                <td><%= item.profit%></td>
                                <td><%= item.category.name%></td>
                                <td>
                                    <%= link_to edit_item_path(item), class: "btn btn-warning" do %>
                                        <i class="bi bi-pencil-fill"></i>
                                    <% end %>
                                </td>
                                <td>    
                                    <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#exampleModal-<%= item.id%>">
                                        <i class="bi bi-trash3-fill"></i>
                                    </button>

                                    <div class="modal fade" id="exampleModal-<%= item.id%>" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                    <div class="modal-dialog">
                                        <div class="modal-content">
                                        <div class="modal-header">
                                            <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
                                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                        </div>
                                        <div class="modal-body">
                                            Are you sure you want to delete this item?
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                            <%= button_to item_path(item), class: "btn btn-danger", method: :delete do %> 
                                                Confirm
                                            <% end %> 
                                        </div>
                                        </div>
                                    </div>
                                    </div>


                                    
                                </td>
                            </tr>
                    <% end %> 
                <% end %>            
            </table>
        </div>
    <% end %>

    <% if logged_in? && current_user.role_id? %>
        <%= link_to 'Add Item', new_item_path, class: 'btn btn-success' %>
    <% end %>
</div>