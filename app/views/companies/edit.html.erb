<% @title="Edit Company" %>
<h1 class="center">Edit Company</h1>

<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <%= form_with(model: @company, local: true, data: { turbo: false }) do |f| %>
            <%= render 'shared/error_messages' , object: f.object%>

            <%= f.label :name, class: 'required' %>
            <%= f.text_field :name, class: 'form-control', required: true %>

            <%= f.label :email, class: 'required' %>
            <%= f.email_field :email, class: 'form-control', required: true %>

            <%= f.label :phone_number, class: 'required' %>
            <%= f.text_field :phone_number, class: 'form-control', required: true %>

            <%= f.label :branch, class: 'required' %>
            <%= f.text_field :branch, class: 'form-control', required: true %>

            <%= f.submit "Update Company", class: "btn btn-primary" %>
        <% end %>
    </div>
</div>