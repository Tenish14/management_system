<% @title="Add Categories" %>
<h1 class="center">Add Categories</h1>

<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <%= form_with(model: @category, local: true, data: { turbo: false }) do |f| %>
            <%= render 'shared/error_messages', object: f.object %>

            <%= f.label :name, class: 'required' %>
            <%= f.text_field :name, class: 'form-control', required: true %>

            <%= f.label :description, class: 'required' %>
            <%= f.text_field :description, class: 'form-control', required: true %>

            <%= f.submit "Create Categories", class: "btn btn-primary" %>
            <%= link_to 'Back', categories_path, class: 'btn btn-success', style: 'width: 39.7em' %>
        <% end %>
    </div>
</div>