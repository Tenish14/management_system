<% @title="Add Categories" %>

<div class="container">
    <div class="row">
        <div class="col-6 mx-auto my-auto">
        <h1 class="center mt-4">Add Categories</h1>
            <%= form_with(model: @category, local: true, data: { turbo: false }) do |f| %>
                <%= render 'shared/error_messages', object: f.object %>

                <%= f.label :name, class: 'required' %>
                <%= f.text_field :name, class: 'form-control', required: true %>

                <%= f.label :description, class: 'required' %>
                <%= f.text_field :description, class: 'form-control', required: true %>

                <div class="d-grid gap-2 my-2">
                    <%= f.submit "Create Categories", class: "btn btn-primary" %>
                    <%= link_to 'Back', categories_path, class: 'btn btn-success' %>
                </div>
            <% end %>
        </div>
    </div>
</div>