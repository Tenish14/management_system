<% @title="Categories" %>

<div class="container">
    <% if @categories.count == 0 %>
        <h1 class="center mt-4">No Category Avaliable</h1>
    <% else %>
        <h1 class="center mt-4">Category</h1>
        <div class="input-group justify-content-end my-2">
            <div class="form-outline">
                <input type="search" class="form-control" id="myInput" placeholder="Search" />
            </div>
            <button type="button" class="btn btn-primary">
                <i class="bi bi-search"></i>
            </button>
        </div>
        <div class="table-responsive">
            <table class="table table-hover">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Description</th>
                    <th>Edit</th>
                </tr>
            </thead>

                <% @categories.each do |category| %>                    
                    <tr class="category_table">
                        <td><%= category.id%></td>
                        <td><%= category.name%></td>
                        <td><%= category.description %></td>
                        <td>
                            <%= link_to edit_category_path(category), class: "btn btn-warning" do %>
                            <i class="bi bi-pencil-fill"></i>
                            <% end %>
                        </td>
                    </tr>
                <% end %>                    
            </table>
        </div>
    <% end %>
    <%= link_to 'Add Category', new_category_path, class: 'btn btn-success' %>
</div>

<script type="text/javascript">
    $(document).ready(function(){
        $("#myInput").on("keyup", function() {
            var value = $(this).val().toLowerCase();
            $("tr.category_table").filter(function() {
                $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
            });
        });
    });
</script>