<% @title="Add User" %>

<div class="container">
    <div class="row">
        <div class="col-6 mx-auto my-auto">
        <h2 class="center mt-5">Add user</h2>
            <%= form_with(model: @user, local: true, data: { turbo: false }) do |f| %>
                <%= render 'shared/error_messages' , object: f.object%>

            
                <%= f.label :first_name,  class: 'required form-label' %>
                <%= f.text_field :first_name, class: 'form-control', required: true %>

                <%= f.label :last_name,  class: 'required form-label' %>
                <%= f.text_field :last_name, class: 'form-control', required: true%>

                <%= f.label :username, class: 'required form-label' %>
                <%= f.text_field :username, class: 'form-control', required: true %>

                <%= f.label :email, class: 'required form-label' %>
                <%= f.email_field :email, class: 'form-control', required: true %>

                <%= f.label :password, class: 'required form-label' %>
                <%= f.password_field :password, class: 'form-control', required: true%>

                <%= f.label :password_confirmation, class: 'required form-label' %>
                <%= f.password_field :password_confirmation, class: 'form-control', required: true%>

                <%= f.label :Role, class: 'required form-label'%>
                <%= f.select :role_id, Role.all.pluck(:name,:id),{prompt:'select'},{class: "form-control"}%>

                <%= f.label :Company,  class: 'required form-label' %>
                <%= f.select :company_id, Company.all.pluck(:name,:id),{prompt:'select'},{class: "form-control"}%>

                <div class="d-grid gap-2 my-2">
                    <%= f.submit "Create account", class: "btn btn-primary" %>
                    <%= link_to 'Back', users_path, class: 'btn btn-success' %>
                </div>
            <% end %>
        </div>
    </div>
</div>