<% @title="User" %>
<h1 class="center">Users</h1>

<div class="container">
    <table class="table table-hover">
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Username</th>
            <th>Email</th>
            <th>Admin</th>
        </tr>

        <% @users.each do |user| %>                    
            <tr>
                <td><%= user.first_name%></td>
                <td><%= user.last_name %></td>
                <td><%= user.username%></td>
                <td><%= user.email%></td>
                <td><%= user.admin%></td>
            </tr>
        <% end %>                    
    </table>
    <%= link_to 'Add User', signup_path, class: 'btn btn-success' %>
</div>